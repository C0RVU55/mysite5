<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="board">
	
	<!-- alias 적용 -->
	
	<!-- 리스트(+검색) -->
	<!-- 
		검색할 때 조건문 안의 변수명을 str로 하면 There is no getter for property named 'str' in 'class java.lang.String' 라면서
		strorg.apache.ibatis.reflection.ReflectionException 오류가 뜨는데 이게 parameterType="String"라 파라미터를 하나 받을 때 
		if test 문법으로 null처리할 때 나는 거라고 함.
		그래서 파라미터명을 다른 걸로 바꿔주면 해결됨. 파라미터명이랑 #{}안의 이름은 달라도 정상 작동함.
		또 쿼리문 안에 if test나 choose를 써도 오라클 문법을 지켜야 됨
	-->
	<select id="selectList" parameterType="String" resultType="BoardVo"> 
		<![CDATA[ 
			SELECT  b.no,
			        title,
			        hit,
			        content,
			        to_char(reg_date, 'YYYY-MM-DD') regDate,
			        user_no userNo,
			        name
			FROM board b left join users u
			on b.user_no = u.no
		]]>
		<choose>
			<when test="value != null">
				<![CDATA[ 
					where title like '%'||#{value}||'%'
					or content like '%'||#{value}||'%'
					or name like '%'||#{value}||'%'
					order by b.no desc
				]]>
			</when>
			<otherwise>
				<![CDATA[ 
					order by b.no desc
				]]>
			</otherwise>
		</choose>
	</select>
	
	<!-- 리스트2 (+검색) -->
	<!-- ||가 문자열 조합 +라고 볼 수 있음 -->
	<select id="selectList2" parameterType="String" resultType="BoardVo">
		<![CDATA[ 
			SELECT  b.no,
			        title,
			        hit,
			        content,
			        to_char(reg_date, 'YYYY-MM-DD') regDate,
			        user_no userNo,
			        name
			FROM board b left join users u
			on b.user_no = u.no
		]]>

		<if test="value != null and value != ''">
			<![CDATA[ 
				where title like '%'||#{keyword}||'%'
				or content like '%'||#{keyword}||'%'
				or name like '%'||#{keyword}||'%'
			]]>
		</if>

		<![CDATA[ 
			order by b.no desc
		]]>
	</select>
	
	<!--  리스트3 (+검색), ||가 문자열 조합 +라고 볼 수 있음
	<select id="selectList3" parameterType="String" resultType="BoardVo">
		<![CDATA[ 
			SELECT  b.no,
			        title,
			        hit,
			        content,
			        to_char(reg_date, 'YYYY-MM-DD') regDate,
			        user_no userNo,
			        name
			FROM board b left join users u
			on b.user_no = u.no
		]]>

		<if test="value != null and value != ''">
			<![CDATA[ 
				where title like '%'||#{keyword}||'%'
				or content like '%'||#{keyword}||'%'
				or name like '%'||#{keyword}||'%'
			]]>
		</if>

		<![CDATA[ 
			order by b.no desc
		]]>
	</select>
	-->
	
	<!-- 리스트3(+검색+페이징) / #{}안의 값이 map의 키와 같아야 함. -->
	<!-- 파라미터타입 소문자로 쓰면 검색 안 먹음 -->
	<select id="selectList3" parameterType="Map" resultType="BoardVo">
		<![CDATA[ 
			SELECT  r.rnum,
			        r.no,
			        r.title,
			        r.hit,
			        r.regDate,
			        r.userNo,
			        r.userName
			FROM (SELECT  rownum rnum,
			                o.no,
			                o.title,
			                o.hit,
			                o.regDate,
			                o.userNo,
			                o.userName
			        FROM (SELECT b.no,
			                        title,
			                        hit,
			                        to_char(reg_date, 'YYYY-MM-DD') regDate,
			                        user_no userNo,
			                        name userName
			                FROM board b left join users u
			                on b.user_no = u.no
        ]]>
	        <if test="keyword != null and keyword != ''">
				<![CDATA[ 
					 where title like '%'||#{keyword}||'%'
				     or content like '%'||#{keyword}||'%'
				     or name like '%'||#{keyword}||'%'
				]]>
			</if>
     		   <![CDATA[
			               
			                order by b.no desc) o ) r
			where r.rnum >= #{startRnum}
			and r.rnum <= #{endRnum}
				]]>
	</select>
	
	<!-- 전체글 수 가져오기 -->
	<select id="selectTotalCnt" parameterType="string" resultType="int">
		<![CDATA[ 
			SELECT  count(*)
			FROM board b, users u
			where b.user_no = u.no
			
		]]>
		
		<if test="value != null and value != ''">
			<![CDATA[ 
				and title like '%'||#{keyword}||'%'
			]]>
		</if>
	</select>
	
	<!-- 글 읽기 -->
	<select id="selectPosting" parameterType="int" resultType="BoardVo">
		<![CDATA[ 
			SELECT  b.no,
			        name,
			        hit,
			        to_char(reg_date, 'YYYY-MM-DD') regDate,
			        title,
			        content,
			        user_no userNo
			FROM board b, users u
			where  b.user_no = u.no
			and b.no = #{no}
		]]>
	</select>
	
	<!-- 조회수 증가 -->
	<update id="hitUpdate" parameterType="int">
		<![CDATA[ 
			update board
			set hit = hit + 1
			where no = #{no}
		]]>
	</update>
	
	<!-- 수정 -->
	<update id="update" parameterType="BoardVo">
		<![CDATA[ 
			update board
			set title = #{title},
			    content = #{content}
			where no = #{no}
		]]>
	</update>
	
	<!-- 글 등록 -->
	<insert id="insert" parameterType="BoardVo">
		<![CDATA[ 
			insert into board
			values(seq_board_no.nextval, 
			       #{title}, 
			       #{content}, 
			       0, 
			       sysdate, 
			       #{userNo})
		]]>
	</insert>
	
	<!-- 삭제 -->
	<delete id="delete" parameterType="int">
		<![CDATA[
			delete from board
			where no = #{no}
		]]>
	</delete>
	
</mapper>